<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            style="@style/CategoryStyle"
            android:layout_height="wrap_content"
            android:text="Bhopal : The City Of Lakes"
            android:textColor="@color/Attractions"
            android:textSize="40sp"
            app:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/Attractions"
            style="@style/CategoryStyle"
            android:background="@color/Attractions"
            android:text="@string/attractions"
            app:fontFamily="@font/almendra_display"/>

        <TextView
            android:id="@+id/Restaurants"
            android:text="@string/restaurants"
            android:background="@color/Restaurants"
            style="@style/CategoryStyle"
            app:fontFamily="@font/almendra_display"/>

        <TextView
            android:id="@+id/publicPlaces"
            android:background="@color/publicPlaces"
            android:text="@string/public_places"
            style="@style/CategoryStyle"
            app:fontFamily="@font/almendra_display"/>

        <TextView
            android:id="@+id/Events"
            android:background="@color/Events"
            android:text="@string/events"
            style="@style/CategoryStyle"
            app:fontFamily="@font/almendra_display"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>